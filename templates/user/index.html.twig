<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Tools</title>
  <style>
    .ingredients {
      display: none;
    }
  </style>
</head>

<body class="bg-gray-100">

  <div class="container mx-auto p-4 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold mb-4">Tools</h1>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white table-auto">
        <thead class="bg-gray-800 text-white">
        <a href = '{{path('create_recette')}}'>Creer
          <tr>
            <th class="py-2 px-4">Id</th>
            <th class="py-2 px-4">Nom</th>
            <th class="py-2 px-4">Prenom</th>
            <th class="py-2 px-4">email</th>
            <th class="py-2 px-4">role</th>
            <th class="py-2 px-4">Actions</th>
          </tr>
        </thead>
        {# <a href ="{{path('/create')}}">creer</a> #}
        <tbody>
          {% if button is defined %}
            <button type="submit" class="btn btn-primary">
              {{ button }}
            </button>
          {% endif %}
          {% if not users is empty %}
            <div class="text-center py-4">
              There are {{ users|length }} Tours!
            </div>
          {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success">
              {{ flash_message }}
            </div>
          {% endfor %}
          {% for user in users %}
            <tr class="border-b">
              <td class="py-2 px-4">{{ user.id }}</td>
              <td class="py-2 px-4">{{ user.nom }}</td>
              <td class="py-2 px-4">{{ user.prenom }}</td>
              <td class="py-2 px-4">{{ user.email }}</td>
              <td class="py-2 px-4">Admin</td>
              <td class="py-2 px-4"></td>
              <td class="py-2 px-4">
              
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
      <div class="flex justify-center mt-4">
        {{ knp_pagination_render(users) }}
      </div>
    {% else %}
      <div class="text-center py-4">
        There are no users yet.
      {% endif %}
    </div>
  </div>

  

</body>

</html>
